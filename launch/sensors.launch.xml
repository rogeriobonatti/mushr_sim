<!-- -*- mode: XML -*- -->
<launch>
  <arg name="racecar_version"/>
  <arg name="tf_prefix" default="" />
  <arg name="laser_noise" default="0" />
  <arg name="sensors_config" default="$(find mushr_sim)/config/$(arg racecar_version)/sensors.yaml" />
  <rosparam file="$(arg sensors_config)" command="load" />

  <node pkg="mushr_sim" type="fake_urg_node.py" name="laser_node" output="screen" >
    <param name="tf_prefix" value="$(arg tf_prefix)" />
    <param name="laser_noise" value="$(arg laser_noise)" />
  </node>
</launch>
